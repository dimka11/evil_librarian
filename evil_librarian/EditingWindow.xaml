        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="349" Margin="10,10,0,0" VerticalAlignment="Top" Width="370">
            <Label Content="Label" Height="32" FontSize="16"/>
            <Label Content="Label" Height="32" FontSize="16"/>
            <Label Content="Label" Height="32" FontSize="16"/>
            <Label Content="Label" Height="32" FontSize="16"/>
            <Label Content="Label" Height="32" FontSize="16"/>
            <Label Content="Label" Height="32" FontSize="16"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Height="349" Margin="0,10,10,0" VerticalAlignment="Top" Width="370">
            <TextBox Height="32" TextWrapping="Wrap" Text="TextBox" FontSize="16"/>
            <TextBox Height="32" TextWrapping="Wrap" Text="TextBox" FontSize="16"/>
            <TextBox Height="32" TextWrapping="Wrap" Text="TextBox" FontSize="16"/>
            <TextBox Height="32" TextWrapping="Wrap" Text="TextBox" FontSize="16"/>
            <TextBox Height="32" TextWrapping="Wrap" Text="TextBox" FontSize="16"/>
            <TextBox Height="32" TextWrapping="Wrap" Text="TextBox" FontSize="16"/>
        </StackPanel>

    </Grid>
</Window>
