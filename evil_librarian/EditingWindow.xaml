        xmlns:local="clr-namespace:evil_librarian"
        mc:Ignorable="d"
        Title="Редактирование записи" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="65" Margin="0,364,0,-10" VerticalAlignment="Center" Width="792">
